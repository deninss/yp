<UserControl x:Class="WpfApp1.Pages.ApplicationsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="800">
    <Grid Background="WhiteSmoke">
        <TextBlock Text="{Binding ApplicationNumber}" Width="100" Height="25" Margin="10,10,670,165"/>
        <TextBlock Text="{Binding DateOfAddition}" Width="200" Height="25" Margin="10,54,670,121"/>
        <TextBlock Text="{Binding Equipment}" Width="200" Height="25" Margin="10,100,570,75"/>
        <TextBlock Text="{Binding TypeOfFault}" Width="200" Height="25" Margin="225,10,355,165"/>
        <TextBlock Text="{Binding DescriptionOfTheProblem}" Width="200" Height="25" Margin="225,54,355,121"/>
        <TextBlock Text="{Binding Client}" Width="200" Height="25" Margin="225,100,355,75"/>
        <TextBlock Text="{Binding Status}" Width="200" Height="25" Margin="457,10,123,165"/>
    </Grid>
</UserControl>
